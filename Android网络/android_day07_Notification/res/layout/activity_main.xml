<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btn_send_notification"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_blue_light"
        android:onClick="doClick"
        android:text="点我发送通知"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_clear_notification"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_alignLeft="@+id/btn_send_notification"
        android:layout_below="@+id/btn_send_notification"
        android:layout_marginTop="32dp"
        android:background="@android:color/holo_purple"
        android:onClick="doClick"
        android:text="点我清除通知"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
    
    <Button
        android:id="@+id/btn_download_notification"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_alignLeft="@+id/btn_send_notification"
        android:layout_below="@+id/btn_clear_notification"
        android:layout_marginTop="32dp"
        android:background="@android:color/holo_green_dark"
        android:onClick="doClick"
        android:text="点我下载图片"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
    
    <Button
        android:id="@+id/btn_progress_notification"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_alignLeft="@+id/btn_send_notification"
        android:layout_below="@+id/btn_download_notification"
        android:layout_marginTop="32dp"
        android:background="@android:color/holo_red_dark"
        android:onClick="doClick"
        android:text="点我发送带进度的通知"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
    
    <Button
        android:id="@+id/btn_custom_notification"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_alignLeft="@+id/btn_send_notification"
        android:layout_below="@+id/btn_progress_notification"
        android:layout_marginTop="32dp"
        android:background="@android:color/holo_orange_dark"
        android:onClick="doClick"
        android:text="点我发送自定义UI的通知"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</RelativeLayout>