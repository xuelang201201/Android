<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/iv_music_item_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_music_item_duration"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:gravity="left|center"
        android:singleLine="true"
        android:text="00:00"
        android:textColor="#666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_music_item_title"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/tv_music_item_duration"
        android:layout_toRightOf="@+id/iv_music_item_image"
        android:gravity="left|center"
        android:singleLine="true"
        android:text="歌曲名称"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_music_item_artist"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignLeft="@+id/tv_music_item_title"
        android:layout_below="@+id/tv_music_item_title"
        android:layout_marginRight="10dp"
        android:gravity="left|center"
        android:singleLine="true"
        android:text="作者"
        android:textColor="#666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_music_item_album"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_alignTop="@+id/tv_music_item_artist"
        android:layout_toRightOf="@+id/tv_music_item_artist"
        android:gravity="left|center"
        android:singleLine="true"
        android:text="专辑"
        android:textColor="#666666"
        android:textSize="12sp" />

</RelativeLayout>