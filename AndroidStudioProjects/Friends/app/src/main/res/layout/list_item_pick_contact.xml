<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/recycler_bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/list_item_pick_contact_sort_key_layout"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="#cccccc" >

        <TextView
            android:id="@+id/list_item_pick_contact_sort_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="A"
            android:textColor="#888888"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/list_item_pick_contact_name_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/list_item_pick_contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:text="张三"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/list_item_pick_contact_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123234234"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/list_item_pick_contact_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:checked="false"
            style="@style/Custom_CheckBox" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#cccccc"
        android:layout_marginLeft="30dp" />

</LinearLayout>