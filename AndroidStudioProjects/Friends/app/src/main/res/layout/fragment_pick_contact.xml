<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/colorNormal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:id="@+id/headerview"
        layout="@layout/contact_header_view" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_list_item_pick_contact_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/ic_done_all_background"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_done_all" />

        <TextView
            android:id="@+id/fragment_pick_contact_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/done_all" />

    </LinearLayout>

</LinearLayout>