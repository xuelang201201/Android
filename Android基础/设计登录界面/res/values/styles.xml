<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 标题栏 -->
    <style name="TitleBar">
        <item name="android:background">@color/main_color</item>
        <item name="android:minHeight">@dimen/title_bar_height</item>
    </style>
    
    <!-- 标题栏文字 -->
    <style name="TitleBarText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_huge</item>
    </style>
    
    <!-- 表单区域 -->
    <style name="Form">
        <item name="android:background">@color/form_border_color</item>
        <item name="android:paddingTop">@dimen/form_border_width</item>
        <item name="android:paddingBottom">@dimen/form_border_width</item>
    </style>
    
    <!-- 表单控件 -->
    <style name="FormWidget">
        <item name="android:minHeight">@dimen/form_row_height</item>
        <item name="android:maxHeight">@dimen/form_row_height</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
        <item name="android:textColor">@color/form_text_default_color</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>
    
    <!-- 表单TextView -->
    <style name="FormWidget.TextView">
        <item name="android:minWidth">@dimen/form_row_title_width</item>
        <item name="android:maxWidth">@dimen/form_row_title_width</item>
    </style>
    
    <!-- 表单EditText -->
    <style name="FormWidget.EditText">
        
    </style>
    
    <!-- 表单按钮 -->
    <style name="FormButton">
        <item name="android:minHeight">@dimen/form_button_height</item>
        <item name="android:maxHeight">@dimen/form_button_height</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>

</resources>
